<div style="font-weight:550;margin:30px 30px 30px 190px;">
  <span style="font-size:20px;background-color:#dcdcdc;padding:0px 15px;">マイページ</span>
</div>
<div>
    <table style="margin-left:50px;margin-bottom:20px;">
      <tr>
        <td>
          <h4 style="margin:auto;"><strong>登録情報</strong></h4>
        </td>
        <td>
          <%= link_to "編集する", customers_mypage_edit_path, class: "btn btn-sm btn-success"%>
        </td>
      </tr>
    </table>
</div>



<table border="1" style="border-collapse: collapse; margin-right:50%;margin-left:50px;margin-bottom:20px;">

  <tr>
   <td width="17%" style="background-color:#f5f5f5;">
    <div class="field">
     <p>氏名</p>
    </div>
   </td>
   <td width="50%">
    <div>
      <%= @customer.last_name %>
      <%= @customer.first_name %>
    </div>
   </td>
  </tr>

  <tr>
   <td style="background-color:#f5f5f5;">
    <div class="field">
     <p>カナ</p>
    </div>
   </td>
   <td>
    <div>
      <%= @customer.last_name_kana %>
      <%= @customer.first_name_kana %>
    </div>
   </td>
  </tr>

  <tr>
   <td style="background-color:#f5f5f5;">
    <div class="field">
     <p>郵便番号</p>
    </div>
   </td>
   <td>
    <div>
      <%= @customer.postcode %>
    </div>
   </td>
  </tr>

  <tr>
   <td style="background-color:#f5f5f5;">
    <div class="field">
     <p>住所</p>
    </div>
   </td>
   <td>
    <div>
      <%= @customer.address %>
    </div>
   </td>
  </tr>

  <tr>
   <td style="background-color:#f5f5f5;">
    <div class="field">
     <p>電話番号</p>
    </div>
   </td>
   <td>
    <div>
      <%= @customer.phone_number %>
    </div>
   </td>
  </tr>

  <tr>
   <td style="background-color:#f5f5f5;">
    <div class="field">
     <p>メールアドレス</p>
    </div>
   </td>
   <td>
    <div>
      <%= @customer.email %>
    </div>
   </td>
  </tr>
</table>

<div  style="margin-left:45px;margin-bottom:20px;">
    <table cellpadding="5">
      <tr >
        <td>
          <h4 style="margin:auto;"><strong>配送先</strong></h4>
        </td>
        <td>
          <%= link_to "一覧を見る", shippings_path, class: "btn btn-sm btn-primary"%>
        </td>
      </tr>
      <tr>
        <td>
          <h4 style="margin:auto;"><strong>注文履歴</strong></h4>
        </td>
        <td>
          <%= link_to "一覧を見る", orders_path, class: "btn btn-sm btn-primary"%>
        </td>
      </tr>
    </table>
</div>

