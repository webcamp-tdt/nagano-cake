<div style="font-weight:550;margin:30px 30px 30px 190px;">
  <span style="font-size:20px;background-color:#dcdcdc;padding:0px 15px;">会員情報編集</span>
</div>


<%= form_with model:@customer, url:customers_mypage_path, local:true do |f| %>
    <div class = "col-md">
      <form>
        <table>
          <tr>
            <td>
              <%= f.label :氏名 %>
            </td>
            <td>
              <%= f.text_field :first_name, autofocus: true %>

              <%= f.text_field :last_name, autofocus: true %>
            </td>
          </tr>

          <tr>
            <td>
              <%= f.label :フリガナ %>
            </td>
            <td>
              <%= f.text_field :first_name_kana, autofocus: true %>

              <%= f.text_field :last_name_kana, autofocus: true %>
            </td>
          </tr>

          <tr>
            <td>
              <%= f.label :郵便番号 %>
            </td>
            <td>
              <%= f.text_field :postcode, autofocus: true %>
            </td>
          </tr>

          <tr>
            <td>
              <%= f.label :住所 %>
            </td>
            <td>
              <%= f.text_field :address, autofocus: true, autocomplete: "住所", size: "60x5" %>
            </td>
          </tr>

          <tr>
            <td>
              <%= f.label :電話番号 %>
            </td>
            <td>
              <%= f.text_field :phone_number, autofocus: true %>
            </td>
          </tr>

          <tr>
            <td>
              <%= f.label :メールアドレス %>
            </td>
            <td>
              <%= f.email_field :email, autofocus: true %>
            </td>
          </tr>

          <tr>
            <td></td>
            <td>
              <%= f.submit "編集内容を保存", class: "btn btn-sm btn-success" %>
              <%= link_to "退会する", customers_check_path, class: "btn btn-sm btn-primary" %>
            </td>
            <td></td>
          </tr>
        </table>
      </form>
    </div>
  <% end %>