<span style="font-size: 20px; background-color: #dcdcdc">
    注文履歴詳細
</span>


<table border="0">
    <table border="1">
      <caption style="margin-rigth: auto;">注文情報</caption>
      
        <%= @order.each do |f| %> 
            <tr>
              <th style="background-color: #dcdcdc">注文日</th>
              <td><%= f.created_at %></td>
            </tr>
            
            <tr>
              <th>配送先</th>
              <td><%= f.delivery %></td>
            </tr>
            
            <tr>
              <th>支払方法</th>
              <td><%= f.payment %></td>
            </tr>
            
            <tr>
              <th>ステータス</th>
              <td><%= f.status %></td>
            </tr>
        <% end %>
    </table>
    
    <table border="1">
      <caption style="margin-rigth: auto;">請求情報</caption>
      
        <%= @order.each do |f| %>
        　　<tr>
        　　  <th style="background-color: #dcdcdc">商品合計</th>
        　　  <td><%= f.price_intax %></td>
        　　</tr>
        　　
        　　<tr>
        　　  <th>配送料</th>
        　　  <td><%= f.postage %></td>
        　　</tr>
        　　
        　　<tr>
        　　  <th><strong>ご請求額</strong></th>
        　　  <td><%= f.total_payment %></td>
        　　</tr>
        <% end %>
    </table>
</table>

<table>
  <caption style="margin-rigth: auto;">注文内容</caption>
  
  <thead>
    <tr>
      <th>商品</th>
      <th>単価（税込）</th>
      <th>個数</th>
      <th>小計</th>
    </tr>
  </thead>
  
  <tbody>
    <%= @order.each do |f| %>
      <tr>
        <td><%= f. %></td>
        <td><%= f.price + "f.price*0.1" %></td>
        <td></td>
        <td
      </tr>
  </tbody>
</table>