<span style="font-size: 20px; background-color: #dcdcdc">
    注文履歴詳細
</span>


<table border="0">
    <table border="1">
      <caption style="margin-rigth: auto;">注文情報</caption>
      
            <tr>
              <th style="background-color: #dcdcdc">注文日</th>
              <td><%= @order.created_at %></td>
            </tr>
            
            <tr>
              <th>配送先</th>
              <td><%= @order.delivery %></td>
            </tr>
            
            <tr>
              <th>支払方法</th>
              <td><%= @order.payment %></td>
            </tr>
            
            <tr>
              <th>ステータス</th>
              <td><%= @order.status %></td>
            </tr>
    </table>
    
    <table border="1">
      <caption style="margin-rigth: auto;">請求情報</caption>
      
        　　<tr>
        　　  <th style="background-color: #dcdcdc">商品合計</th>
           　<!--<td><%= @order.total_payment - @order.postage %></td>-->
        　　</tr>
        　　
        　　<tr>
        　　  <th>配送料</th>
            <td><% @order.postage %></td>
        　　</tr>
        　　
        　　<tr>
        　　  <th><strong>ご請求額</strong></th>
            <td><%= @order.total_payment %></td>
        　　</tr>
    </table>
</table>

<table>
  <caption style="margin-rigth: auto;">注文内容</caption>
  
  <thead>
    <tr>
      <th style="background-color: #dcdcdc">商品</th>
      <th>単価（税込）</th>
      <th>個数</th>
      <th>小計</th>
    </tr>
  </thead>
  
  <tbody>
      <tr>
        <td><%= @order_item.item.name %></td>
        <td><%= @order_item.price_intax %></td>
        <td><%= @order_item.quantity %></td>
        <!--<td><%= @order_items.'price_intax*quantity' %></td>-->
      </tr>
  </tbody>
  
</table>