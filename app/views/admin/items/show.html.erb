<div class="container">
  <div class="row">
    <div class="col-md-4">
      <span style="font-size: 20px; background-color: #dcdcdc">
          商品詳細
      </span>
      <div>
        <%= attachment_image_tag @item,:image, :size =>'300x300'%>
      </div>
    </div>

<table border="0">

  <tr>
    <th>商品名</th>
    <td><%= @item.name %></td>
  </tr>

  <tr>
    <th>商品説明</th>
    <td><%= @item.introduction %></td>
  </tr>

  <tr>
    <th>ジャンル</th>
    <td><%= @item.genre.name %></td>
  </tr>

  <tr>
    <th>税込価格</br>
        （税抜価格）
    </th>
    <td><%= @item.price*1.1.round %>（<%= @item.price %>）</td>
  </tr>

  <tr>
    <th>販売ステータス</th>
    <td>
      <% if @item.is_active == true %>
        <p>販売中</p>
        <% else %>
        <p>販売停止中</p>
      <% end %>
    </td>
  </tr>

  <caption>
    <%= link_to '編集する', edit_admin_item_path, class:"btn btn-success" %>
  </caption>
 </table>

  </div>
</div>