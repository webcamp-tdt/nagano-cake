<span style="font-size:20px;background-color:#dcdcdc">
 <strong><%= @customer.full_name %></strong>さんの<strong>会員詳細</strong>
</span>
　
<table>
    
<tr>
 <td>
  <div class="field" style="margin-right: 40px;">
   <p>会員ID</p>
  </div>
 </td>
 <td>
  <div>
    <%= @customer.id %>
  </div>
 </td>
</tr>

<tr>
 <td>
  <div class="field">
   <p>氏名</p>
  </div>
 </td>
 <td>
  <div>
    <%= @customer.last_name %>
    <%= @customer.first_name %>
  </div>
 </td>
</tr>

<tr>
 <td>
  <div class="field">
   <p>フリガナ</p>
  </div>
 </td>
 <td>
  <div>
    <%= @customer.last_name_kana %>
    <%= @customer.first_name_kana %>
  </div>
 </td>
</tr>

<tr>
 <td>
  <div class="field">
   <p>郵便番号</p>
  </div>
 </td>
